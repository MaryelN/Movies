<div class="col-md-4 my-2 d-flex">
	<div class="card w-100">
		{% if movie.imageName %}
			<img src="{{ vich_uploader_asset(movie, 'imageFile') }}" alt="affiche de {{ movie.name }}" class="card-img-top"></img>
	{% else %}
		<img src="{{asset('build/images/default-image.jpg')}}" alt="affiche {{ movie.name }}" class="card-img-top">
	{% endif %}
	<div class="card-body">
		<h2 class="card-title">{{ movie.name }}</h2>
		<p class="card-text">{{movie.releaseYear}}</p>
		<a href="{{ path('app_movie_detail', {'id': movie.id}) }}" class="btn btn-primary">Voir l'affiche</a>
		<div class="d-flex justify-content-between align-items-center">
			{% for genre in movie.genre %}
				<a href="{{ path('app_movie', {'genreId': genre.id}) }}">{{ genre.name }}</a>
			{% endfor %}

		</div>
	</div>
</div></div>
